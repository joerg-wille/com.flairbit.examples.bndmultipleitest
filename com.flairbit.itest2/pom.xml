					</bndruns>
					<failOnChanges>false</failOnChanges>
					<targetDir>.</targetDir>
					<resolve>true</resolve>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>testing</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
