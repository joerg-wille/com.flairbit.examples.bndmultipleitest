				<artifactId>bnd-indexer-maven-plugin</artifactId>
				<version>${bnd.version}</version>
				<configuration>
					<includeJar>true</includeJar>
					<localURLs>${local.index.policy}</localURLs>
					<scopes>
						<scope>compile</scope>
						<scope>provided</scope>
						<scope>test</scope>
					</scopes>
				</configuration>
